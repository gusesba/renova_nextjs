generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity", "fullTextSearch", "fullTextIndex"]
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider     = "cockroachdb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Client {
  id        Int       @id @default(sequence(maxValue: 2147483647))
  phone     String
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
  purchases Sell[]
}

model Product {
  id          Int      @id @default(sequence(maxValue: 2147483647))
  price       Decimal
  product     String
  brand       String
  size        String
  color       String
  providerId  Int
  description String?
  entry       DateTime
  sellId      Int?
  sellPrice   Decimal?
  sell        Sell?    @relation(fields: [sellId], references: [id], onDelete: Restrict)
  provider    Client   @relation(fields: [providerId], references: [id], onDelete: Restrict)

  @@index([providerId])
  @@index([sellId])
}

model Sell {
  id        Int       @id @default(sequence(maxValue: 2147483647))
  type      String
  buyerId   Int
  createdAt DateTime  @default(now())
  buyer     Client    @relation(fields: [buyerId], references: [id], onDelete: Restrict)
  products  Product[]

  @@index([buyerId])
}
